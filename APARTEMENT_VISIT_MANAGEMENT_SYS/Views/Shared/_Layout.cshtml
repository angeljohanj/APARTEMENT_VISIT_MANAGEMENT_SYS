@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APARTEMENT_VISIT_MANAGEMENT_SYS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/APARTEMENT_VISIT_MANAGEMENT_SYS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="./js/site.js"></script>
</head>
<body>
    <header>

        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VISIT-APP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <span class="material-symbols-outlined">
                                home
                            </span>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Pagina principal</a>
                        </li>
                            <li class="nav-item">
                            <span class="material-symbols-outlined">
                                home_work
                            </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ListApt">Administrar apartamentos</a>
                            </li>
                            <li class="nav-item">
                            <span class="material-symbols-outlined">
                                person_add
                            </span>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Agregar visitante</a>
                        </li>
                            <li class="nav-item">
                            <span class="material-symbols-outlined">
                                done_all
                            </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Registrar ida</a>
                            </li>
                            <li class="nav-item">
                            <span class="material-symbols-outlined">
                                groups
                            </span>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Administrar visitantes</a>
                        </li>
                            <li class="nav-item">
                            <span class="material-symbols-outlined">
                                summarize
                            </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Reportes</a>
                            </li>
                       <!-- <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                         </li>-->
                    </ul>
                </div>
            </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - All rights reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
